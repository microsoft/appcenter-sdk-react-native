    <iconUrl>https://aka.ms/xhh7sr</iconUrl>
    <dependencies>
        <!-- Use dependency groups for iOS and Android so that additional dependencies aren't added to them -->
        <group targetFramework="MonoAndroid403">
        </group>
        <group targetFramework="Xamarin.iOS10">
        </group>
    </dependencies>
  </metadata>
  <files>

    <!-- Portable -->
    <file src="$pcl_dir$/Microsoft.Azure.Mobile.dll" target="lib/portable-net45+win8+wpa81+wp8" />

    <!-- .NET Standard -->
    <file src="$netstandard_dir$/Microsoft.Azure.Mobile.dll" target="lib/netstandard1.0" />

